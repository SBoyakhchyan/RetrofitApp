<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_700">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_articleImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_text_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/author_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_articleImage"
        style="@style/author_text_style"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text_author"
        style="@style/title_text_style"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/description_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text_title"
        style="@style/description_text_style"
        android:layout_marginBottom="25dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>